<div class="container">
    <div class="card text-white bg-xtradark my-4">
        <div class="card-header">
            <div class="font-comment h2 d-flex align-items-end">
                <span class="font-subtitle display-1">User Info</span>
                <span class="mx-4 align-self-center"> for </span>
                <span class="font-subtitle display-3 pb-1">{{User.dataValues.username}}</span>
            </div>
            <div class="card-body py-0 row font-title">
                    <div class="col card-text">
                        <div class="text-muted mb-1">Last login :</div>
                        <div class="font-subtitle h2 m-0" data-date="{{User.dataValues.last_login}}" id="last-login"></div>
                    </div>
                    <div class="col card-text">
                        <div class="text-muted mb-1">Date Created :</div>
                        <div class="font-subtitle h2 m-0" data-date="{{User.dataValues.createdAt}}" id="date-created"></div>
                    </div>
                    <div class="col card-text">
                        <div class="text-muted mb-1">Total upvotes :</div>
                        <div class="font-subtitle h2 m-0">215</div>
                    </div>
                    <div class="col card-text">
                        <div class="text-muted mb-1">Total downvotes :</div>
                        <div class="font-subtitle h2 m-0">62</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>